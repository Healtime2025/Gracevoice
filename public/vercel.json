{
  "version": 2,
  "rewrites": [
    {
      "source": "/",
      "destination": "/grace.html"
    },
    {
      "source": "/read",
      "destination": "/reader.html"
    },
    {
      "source": "/voice",
      "destination": "/index.html"
    },
    {
      "source": "/faith-hub",
      "destination": "/faith-hub.html"
    },
    {
      "source": "/notes",
      "destination": "/notes.html"
    },
    {
      "source": "/prayer-wall",
      "destination": "/prayer-wall.html"
    },
    {
      "source": "/receive-christ",
      "destination": "/receive-christ.html"
    },
    {
      "source": "/testimonies",
      "destination": "/testimonies.html"
    },
    {
      "source": "/log",
      "destination": "/log.html"
    },
    {
      "source": "/bookmark",
      "destination": "/bookmark.html"
    },
    {
      "source": "/about",
      "destination": "/about.html"
    },
    {
      "source": "/settings",
      "destination": "/settings.html"
    },
    {
      "source": "/donate",
      "destination": "/donate.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Content-Security-Policy",
          "value": "default-src 'self'; img-src 'self' data:; style-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-inline'; font-src 'self';"
        }
      ]
    }
  ],
  "cleanUrls": true,
  "trailingSlash": false
}
